<body class="center-text">
  <div class="style-div">
    <form class="form-signin">
        <img class="mb-4 center-image" src="https://comunicacioninstitucional.uabc.mx/sites/default/files/inline-images/escudo-actualizado-2022.png" alt="" width="144" height="184">
        <h1 style="color: #026e00">Inicia sesión</h1>
        
        <div class="form-group">
          <label for="inputEmail" class="sr-only">Correo Institucional</label>
          <input type="email" id="inputEmail" class="form-control" placeholder="Correo Institucional" required autofocus>
        </div>

        <div class="form-group">
          <label for "inputPassword" class="sr-only">Contraseña</label>
          <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
        </div>

        <div style="padding: 10px">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesión</button>
        </div>

        <div>
          <label>
            <input type="checkbox" value="remember-me"> Recuérdame
          </label>
        </div>

    </form>

  <div class="center-image">
    <div class="g-signin2" data-onsuccess="onSignIn"></div>
  </div>

  </div> 
