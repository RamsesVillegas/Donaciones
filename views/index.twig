    <style>
        /* Estilos para centrar la imagen y el texto "Inicia sesión" */
        .center-image {
            display: block;
            margin: 0 auto;
        }
        .center-text {
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .style-div {
            background-color: #eaf5e9;
            border-radius: 15px;
            box-shadow: 3px 3px 5px 5px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
            margin-left: auto; /* Para centrar horizontalmente */
            margin-right: auto; /* Para centrar horizontalmente */
            margin-top: 20px;
            padding: 10px;
            text-align: center;
            width: 50%; /* Establecer el ancho al 50% */
        }

