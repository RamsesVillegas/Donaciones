<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sistema de donaciones UABC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="signin.css">
    <style>
        body {
        font-family: "Open Sans", sans-serif;
        margin: 0; /* Elimina los márgenes predeterminados del cuerpo */
    }

        header {
        position: fixed;
        top: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #fff;
        padding: 18px;
        color: #385835; 
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.6);
        z-index: 10;
        }
        
        #logo h2 {
            font-weight: bold;
            text-shadow: 1px 1px 1px #000; /* Define la sombra: desplazamiento horizontal, desplazamiento vertical, difuminación y color */
            color: #385835;
        }
        #menu ul {
            list-style: none;
            display: flex;
        }
        #menu li {
            margin-right: 20px;
        }
        #menu a {
            text-decoration: none;
            color: #385835; /* Color de los enlaces */
        }

        #inicio {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 10; /* Cambia el valor de z-index a -1 para que la imagen de fondo esté detrás del contenido */
        }

        footer {
        background-color: #22461f;
        padding: 18px;
        color: #ffffff;
        text-align: center;
        width: 100%;
        z-index: 1000;
        }

        #g-signin {
            display: inline-block;
        }

    </style>
</head>
<body>
  <header>
    <div style="display: flex;">
    <img src="https://lh7-us.googleusercontent.com/hzDuv_OleoVquRLfJpXKKm2fCDjPydMRPv3DNZkU_AZdMdsUxabV9mP4C7qr1xqBlo4cJSok-oZap6HRD9tyqNb7-oXEJkzcO3BT00PtTxGzX6RJ3E7rxHrMsrJY4i9eKuRuo_jszT88IsaQ09d9erU" width="34" height="45" />
    <a href="/#inicio" style="text-decoration: none; margin-left: 10px;" id="logo">
        <h2>UABC</h2>
    </a>
    </div>
    <nav id="menu">
      <ul>
        <li><a href="/#inicio">INICIO</a></li>
        <li><a href="/#acerca">ACERCA DE</a></li>
        <li><a href="/#donacion">HAZ UNA DONACIÓN</a></li>
      </ul>
    </nav>
  </header>

    <div style="background-image: url('https://lh7-us.googleusercontent.com/GGIqYNad1JLTsXi3x2Ru-kSZvoYBMBPxJOLPlg-19bVPRVZmL8TpskFtjqSJ6okQifLq9QI1QRjP79y1-TQasrfiXG5IDZ8GxTLe6Z2dzR7cIbLRiFMzkDmOy41l75V8JkG6rl2YWCghtcFedC_TkKw'); background-repeat: repeat; background-color: #d6e3d5; padding: 100px;">
        <div style="display: flex; justify-content: center; margin-top: 50px; ">
                <div style="background-color: #22461f; text-align: center; padding: 18px; color: #ffffff; border-radius: 20px; width: 50%; text-shadow: 1px 1px 1px #000; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5)">
                    <h2><strong>Ingresa tu información</strong></h2>

                    <div>
                        <div id="g-signin"></div>
                    </div>

                    <hr style="width: 400px; border: .5px solid #FFF;"> <!-- Línea separadora horizontal -->

                    <form action="/login" method="POST">
                        <input style="border-radius: 5px; margin-top: 30px; padding: 10px; width: 80%;" type="email" id="email" name="username" placeholder="nombre@dominio.com" required>
                        
                        <br>
                        
                        <input style="border-radius: 5px; margin-top: 20px; padding: 10px; width: 80%;" type="password" id="password" name="password" placeholder="Contraseña" required>
                        
                        <br>

                        <button type="submit" style="background-color: #febe10; border-radius: 20px; margin-top: 30px; padding: 12px; color: #FFF; width: 60%; font-size: 23px; font-weight: bold; text-shadow: 1px 1px 1px #000;border: 0px solid #ff0000;">Iniciar sesión</button>
                    </form>

                   <a href="url_de_tu_pagina_de_recuperacion.html" style="display: block; text-align: center; margin-top: 20px; color: #FFF; text-decoration: underline;">¿Has olvidado la contraseña?</a>
                    <hr style="width: 400px; border: .5px solid #FFF;"> <!-- Línea separadora horizontal -->

                    <a href="/registro">
                        <button style="background-color: #36a420; border-radius: 20px; margin-top: 18px; padding: 12px; color: #FFF; width: 60%; font-size: 23px; font-weight: bold; text-shadow: 1px 1px 1px #000;border: 0px solid #ff0000;">Registrarte</button>
                    </a>

                </div>
            </div>
    </div>

  <footer>
      <p>&copy; 2023 All rights reserved - UABC</p>
  </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>

    <script>
        // Inicio sesión Google
        function onSuccess(googleUser) {
            const profile = googleUser.getBasicProfile();
            console.log('ID: ' + profile.getId());
            console.log('Name: ' + profile.getName());
            console.log('Image URL: ' + profile.getImageUrl());
            console.log('Email: ' + profile.getEmail());

            if (profile.getId()) {
                window.location.replace("http://localhost:3000/donar");
            }

            signOut();
        }

        function onFailure(error) {
            console.log(error);
            signOut();
        }

        function renderButton() {
            gapi.load('auth2', function() {
                gapi.auth2.init(
                {
                    client_id: '884210632025-ldubuld7sc0pul2qcremtsccp7bj9tgb.apps.googleusercontent.com',
                    plugin_name: 'g_auth',
                }
                );
            });

            gapi.signin2.render('g-signin', {
                scope: 'profile email',
                width: 300,
                height: 50,
                longtitle: true,
                theme: 'dark',
                onsuccess: onSuccess,
                onfailure: onFailure,
            });
        }

        function signOut() {
            const auth2 = gapi.auth2.getAuthInstance();
            auth2.signOut().then(function () {
                console.log('User signed out.');
            });
        }
    </script>
</body>
</html>